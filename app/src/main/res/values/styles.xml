<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#327FC2</item>
        <item name="colorAccent">#FF5449</item>
        <item name="themedCircleBg">@drawable/circle_bg_pink</item>
    </style>





    <declare-styleable name="KeyValueLayout">

        <attr name="kvl_text_hint" format="string" />
        <attr name="kvl_edit_hint" format="string" />
        <attr name="kvl_edit" format="boolean" />
        <attr name="kvl_has_right_arrow" format="boolean" />
        <attr name="kvl_has_left_icon" format="boolean" />
        <attr name="kvl_text_warning" format="string" />
        <attr name="kvl_has_full_line" format="boolean" />
        <attr name="kvl_right_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="EmucooToolBar">
        <attr name="left_icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="title_color" format="color" />
        <attr name="right_icon" format="reference" />
        <attr name="right_icon_two" format="reference" />
        <attr name="background_color" format="reference" />
        <attr name="right_text_color" format="color" />
        <attr name="right_text" format="string" />
        <attr name="left_text" format="string" />
        <attr name="left_text_color" format="color" />
    </declare-styleable>



    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>



        <item name="kswBackDrawable">@drawable/ios_back_drawable</item>
        <item name="kswThumbRangeRatio">1.4</item>
        <item name="kswThumbDrawable">@drawable/ios_thumb_selector</item>
        <item name="kswAnimationDuration">300</item>

        <item name="kswThumbMarginBottom">-8dp</item>
        <item name="kswThumbMarginLeft">-5dp</item>
        <item name="kswThumbMarginRight">-5dp</item>
        <item name="kswThumbMarginTop">-2.5dp</item>




    </style>


    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:background">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--蒙版- 模糊 -->
    </style>

    <style name="PickerAnimStyle">
        <item name="android:windowEnterAnimation">@anim/picker_in</item>
        <item name="android:windowExitAnimation">@anim/picker_out</item>

    </style>

</resources>
