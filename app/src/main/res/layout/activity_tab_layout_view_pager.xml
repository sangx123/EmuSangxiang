<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xiang.one.widgets.ToolBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mToolbar"
            app:title="组织架构选择"
            app:right_text_color="@color/color_202235"
            app:right_text="确定"
            app:left_icon="@drawable/icon_back_black"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/mTabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabIndicatorColor="@color/color_22a2e4"
            app:tabBackground="@color/white"
            app:tabSelectedTextColor="@color/color_22a2e4"
            app:tabTextColor="#7d7d7d"
            app:tabMode="fixed"
            app:tabGravity="fill"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#e0e0e0"
            android:layout_alignParentBottom="true"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</RelativeLayout>