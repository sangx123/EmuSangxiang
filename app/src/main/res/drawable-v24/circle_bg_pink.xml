<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_theme_pink_ripple"
    >
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <solid android:color="@color/dark_grey"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/default_theme_pink_pressed"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/default_theme_pink"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>